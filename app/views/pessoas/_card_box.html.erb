<div class="box box-primary">
  <div class="box-body box-profile">
    <%= image_tag "avatar", :class => "profile-user-img img-responsive img-circle" %>

    <h3 class="profile-username text-center"><%= pessoa.to_s %></h3>

    <p class="text-muted text-center">
    <%= pessoa.type %>
    </p>

    <ul class="list-group list-group-unbordered">
      <li class="list-group-item">
        <b>E-mail</b> <a class="pull-right"><%= pessoa.email %></a>
      </li>
      <li class="list-group-item">
        <%= link_to "Editar dados", [:edit, pessoa], class: "btn btn-primary" %>
        <!-- <3 rails puta que pariu! -->
      </li>
    </ul>

  </div>
  <!-- /.box-body -->
</div>
