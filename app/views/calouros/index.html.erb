<p id="notice"><%= notice %></p>

<h1>Calouros viados</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Idade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calouros.each do |calouro| %>
      <tr>
        <td><%= calouro.nome %></td>
        <td><%= calouro.idade %></td>
        <td><%= link_to 'Show', calouro %></td>
        <td><%= link_to 'Edit', edit_calouro_path(calouro) %></td>
        <td><%= link_to 'Destroy', calouro, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

