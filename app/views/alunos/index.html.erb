<% content_for :titulo do %>
  Listagem de todos os alunos
<% end %>
<div class="box box-primary">
    <div class="box-body">

<% if @alunos.empty? %>
<p> Nenhum registro de aluno encontrado.</p>
<% else %>


  <table class="table table-hover table-linkable">
            <tbody>
              <tr>
              <th>Nome do aluno</th>
              <th>Email</th>
              <th></th>
              <th></th>

            </tr>
            <% @alunos.each do |aluno| %>
            <tr data-href="<%= aluno_path(aluno) %>">
            <td><%= aluno.nome %></td>
            <td><%= aluno.email %></td>
            <td><%= link_to 'Editar', edit_aluno_path(aluno), class: "btn btn-primary"%></td>
            <td><%= link_to 'Excluir' , aluno_path(aluno), method: :delete, class: "btn btn-danger",
             data:{confirm: "Tem certeza que deseja excluir o aluno #{aluno.to_s}?"} %></td>


            </tr>
            <% end %>
          </tbody>
        </table>
<% end %>
</div>

</div>
<%= link_to 'Cadastrar novo aluno', new_aluno_path, class:"btn btn-primary" %>
</section>
