<% content_for :titulo do %>
  Listagem de todos os professores
<% end %>
<div class="box box-primary">
    <div class="box-body">

<% if @professores.empty? %>
<p> Nenhum registro de professor encontrado.</p>
<% else %>


  <table class="table table-hover table-linkable">
            <tbody>
              <tr>
              <th>Nome do professor</th>
              <th>Email</th>
              <th></th>
              <th></th>

            </tr>
            <% @professores.each do |professor| %>
            <tr data-href="<%=  professor_path(professor) %>">
            <td><%= professor.nome %></td>
            <td><%= professor.email %></td>
            <td><%= link_to 'Editar', edit_professor_path(professor), class: "btn btn-primary"%></td>
            <td><%= link_to 'Excluir' , professor_path(professor), method: :delete, class: "btn btn-danger",
             data:{confirm: "Tem certeza que deseja excluir o professor #{professor.to_s}?"} %></td>


            </tr>
            <% end %>
          </tbody>
        </table>
<% end %>
</div>

</div>
<%= link_to 'Cadastrar novo professor', new_professor_path, class:"btn btn-primary" %>
</section>
